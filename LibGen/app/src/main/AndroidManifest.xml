<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.makram.libgen" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".LibGen"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_libgen"
        android:label="@string/app_name"
        android:theme="@style/LibGen" >

        <receiver android:name=".DownloadBroadcastReceiver"/>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/short_app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ResultsActivity"
            android:label="@string/title_activity_results"
            android:parentActivityName=".activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.DetailsActivity"
            android:label="@string/title_activity_details"
            android:parentActivityName=".activities.ResultsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ResultsActivity" />
        </activity>
    </application>

</manifest>
